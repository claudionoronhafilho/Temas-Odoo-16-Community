                        </li>

                        <li class="air_condition" t-if="request.params.get('ac') and request.params.get('ac') == '1'">
                            <input id="check-air-condition" type="checkbox" value="1" name="ac" checked="checked" />
                            <label for="check-air-condition">Air Conditioned</label>
                        </li>
                        <li class="air_condition" t-else="">
                            <input id="check-air-condition" type="checkbox" value="1" />
                            <label for="check-air-condition">Air Conditioned</label>
                        </li>

                        <li class="s_furnish" t-if="request.params.get('smf') and request.params.get('smf') == '1'">
