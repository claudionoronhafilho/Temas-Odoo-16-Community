        <template id="property_filters" name="Listing Filters">
            <div class="scrl-content filter-sidebar fs-viscon">
                <div class="tabs-container fl-wrap">
                    <div class="tab">
                        <div id="filters-search" class="tab-content  first-tab">
                            <form method="GET" class="search-filters" t-att-action="request.httprequest.full_path">
                                <div class="listsearch-input-item location autocomplete-container">
                                    <span class="iconn-dec"><i class="far fa-keyboard"></i></span>
                                    <input type="text" placeholder="What you are looking for ?" name="search_term" t-attf-value="#{request.params.get('search_term') if request.params.get('search_term') else '' }" class="autocomplete-input" id="autocompleteid3"/>
                                </div>
                                <div class="listsearch-input-item">
                                    <select data-placeholder="Any Status" name="st" class="chosen-select no-search-select">
                                        <t t-if="not request.params.get('st') or (request.params.get('st') and request.params.get('st') not in ['rent', 'sale'])">
                                            <option selected="selected">Any Status</option>
                                            <option value="rent">For Rent</option>
                                            <option value="sale">For Sale</option>
                                        </t>
                                        <t t-if="request.params.get('st') and request.params.get('st') == 'rent'">
                                            <option>Any Status</option>
                                            <option value="rent" selected="selected">For Rent</option>
                                            <option value="sale">For Sale</option>
                                        </t>
                                        <t t-if="request.params.get('st') and request.params.get('st') == 'sale'">
                                            <option>Any Status</option>
                                            <option value="rent">For Rent</option>
                                            <option value="sale" selected="selected">For Sale</option>
                                        </t>
                                    </select>
                                </div>
                                <div class="listsearch-input-item w49 mr4">
                                    <select data-placeholder="Categories" name="categ" id="categ" class="chosen-select no-search-select">
                                        <t t-if="not request.params.get('categ') or (request.params.get('categ') and request.params.get('st') not in ['apartments', 'houses', 'industrials', 'commercials', 'lands'])">
                                            <option selected="selected">All Categories</option>
                                            <option value="apartments">Apartments</option>
                                            <option value="houses">Houses</option>
                                            <option value="industrials">Industrials</option>
                                            <option value="commercials">Commercial</option>
                                            <option value="lands">Lands</option>
                                        </t>
                                        <t t-if="request.params.get('categ') and request.params.get('categ') == 'apartments'">
                                            <option>All Categories</option>
                                            <option value="apartments" selected="selected">Apartments</option>
                                            <option value="houses">Houses</option>
                                            <option value="industrials">Industrials</option>
                                            <option value="commercials">Commercial</option>
                                            <option value="lands">Lands</option>
                                        </t>
                                        <t t-if="request.params.get('categ') and request.params.get('categ') == 'houses'">
                                            <option>All Categories</option>
                                            <option value="apartments" >Apartments</option>
                                            <option value="houses" selected="selected">Houses</option>
                                            <option value="industrials">Industrials</option>
                                            <option value="commercials">Commercial</option>
                                            <option value="lands">Lands</option>
                                        </t>
                                        <t t-if="request.params.get('categ') and request.params.get('categ') == 'industrials'">
                                            <option>All Categories</option>
                                            <option value="apartments" >Apartments</option>
                                            <option value="houses">Houses</option>
                                            <option value="industrials" selected="selected">Industrials</option>
                                            <option value="commercials">Commercial</option>
                                            <option value="lands">Lands</option>
                                        </t>
