<odoo>
    <data>
        <template id="property_list" name="Listing">
            <t t-call="website.layout">
                <div id="wrapper">
                    <!-- content-->
                    <div class="content">
                        <!--  section  -->
                        <section class="p-section parallax-section single-par" data-scrollax-parent="true">
                            <div class="bg par-elem"  data-bg="/tk_website_rental_management/static/src/images/bg/04.jpg" data-scrollax="properties: { translateY: '30%' }"></div>
                            <div class="overlay op7"></div>
                            <div class="p-container container">
                                <div class="section-title center-align big-title">
                                    <h2>
                                        <t t-if="city or list_type">
                                            <span t-if="city"><t t-esc="city.name" />&#160;Listings</span>
                                            <span t-if="list_type" class="text-capitalize">
                                                <t t-esc="list_type" />&#160;Listing
                                            </span>
                                        </t>
                                        <span t-else="">Properties</span>
                                    </h2>
                                    <span class="section-separator"></span>
                                    <h4>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut nec tincidunt arcu, sit amet fermentum sem.</h4>
                                </div>
                            </div>
                            <div class="header-sec-link">
                                <a href="#sec1" class="custom-scroll-link"><i class="fal fa-angle-double-down"></i></a>
                            </div>
                        </section>
                        <section class="oe_structure oe_empty"></section>
                        <!--  section end-->
                        <section class="p-section gray-bg small-padding no-top-padding-sec" id="sec1">
                            <div class="p-container container">
                                <div class="breadcrumbs inline-breadcrumbs fl-wrap block-breadcrumbs">
                                    <a href="/">Home</a><a href="properties-list">Listings</a><span t-if="city" t-esc="city.name" />
                                </div>
                                <div class="mob-nav-content-btn  color2-bg show-list-wrap-search ntm fl-wrap"><i class="fal fa-filter"></i>  Filters</div>
                                <div class="fl-wrap">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class=" fl-wrap lws_mobile  tabs-act block_box">
                                                <div class="filter-sidebar-header fl-wrap" id="filters-column">
                                                    <ul class="tabs-menu fl-wrap no-list-style">
                                                        <li class="current"><a href="#filters-search"> <i class="fal fa-sliders-h"></i> Filters </a></li>
                                                    </ul>
                                                </div>
                                                <t t-call="tk_website_rental_management.property_filters" />
                                            </div>
                                            <a class="back-tofilters color2-bg custom-scroll-link fl-wrap" href="#filters-column">Back to filters <i class="fas fa-caret-up"></i></a>
                                        </div>
                                        <div class="col-md-8">
                                            <div class="list-main-wrap-header fl-wrap block_box no-vis-shadow">
                                                <div class="list-main-wrap-title">
                                                </div>
                                                <div class="list-main-wrap-opt">
                                                    <t t-call="tk_website_rental_management.sorting_filters" />
                                                    <div class="grid-opt">
                                                        <ul class="no-list-style">
                                                            <li class="grid-opt_act"><span class="two-col-grid act-grid-opt tolt" data-microtip-position="bottom" data-tooltip="Grid View"><i class="fal fa-th"></i></span></li>
                                                            <li class="grid-opt_act"><span class="one-col-grid tolt" data-microtip-position="bottom" data-tooltip="List View"><i class="fal fa-list"></i></span></li>
                                                        </ul>
                                                    </div>
                                                </div>
                                            </div>
                                            <t t-set="logged_user" t-value="request.env.user.id != request.env.ref('base.public_user').id" />
                                            <div class="listing-item-container init-grid-items fl-wrap nocolumn-lic" t-if="listing">
                                                <t t-foreach="listing" t-as="ll">
                                                    <div class="listing-item">
                                                        <article class="geodir-category-listing fl-wrap">
                                                            <div class="geodir-category-img">
                                                                <div t-attf-class="geodir-js-favorite_btn #{' liked' if ll.id in book_properties else ''}" t-att-data-access="ll.access_token" t-if="logged_user"><i class="fal fa-heart"></i></div>
                                                                <a t-attf-href="/property-details/#{slug(ll)}" class="geodir-category-img-wrap fl-wrap">
                                                                <img class="popular_property" t-att-src="image_data_uri(ll.image) if ll.image else '/tk_website_rental_management/static/src/images/property-placeholder.jpg'" t-att-alt="ll.name" />
                                                                </a>
                                                                <div class="listing-avatar"><a href="#"><img t-att-src="image_data_uri(ll.landlord_id.sudo().image_1920) if ll.landlord_id.sudo().image_1920 else '/tk_website_rental_management/static/src/images/user.png'" t-att-alt="ll.landlord_id.name" /></a>
                                                                    <span class="avatar-tooltip">Added By  <strong><t t-esc="ll.landlord_id.name"  /></strong></span>
                                                                </div>
                                                                <div class="geodir_status_date gsd_open">Available</div>
                                                                <div class="geodir-category-opt">
                                                                    <div class="listing-rating-count-wrap">
                                                                        <div class="review-score"><t t-if="ll.sale_lease == 'for_sale'">Sale</t><t t-else="">Rent</t></div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="geodir-category-content fl-wrap title-sin_item">
                                                                <div class="geodir-category-content-title fl-wrap">
                                                                    <div class="geodir-category-content-title-item">
                                                                        <h3 class="title-sin_map"><a t-attf-href="/property-details/#{slug(ll)}"><t t-esc="ll.name" /></a><span t-if="ll.is_verify" class="verified-badge"><i class="fal fa-check"></i></span></h3>
                                                                        <div class="geodir-category-location fl-wrap"><a t-attf-href="https://maps.google.com/maps?q=loc:#{ll.latitude},#{ll.longitude}" target="_blank" ><i class="fas fa-map-marker-alt"></i> <t t-esc="ll.street" />, <t t-if="ll.city_id"><t t-esc="ll.city_id.name" />,</t> <t t-esc="ll.state_id.code" />, <t t-esc="ll.country_id.code" /></a></div>
                                                                    </div>
                                                                </div>
                                                                <div class="geodir-category-text fl-wrap">
                                                                    <p class="small-text" t-esc="ll.short_description">Lorem Ipsum is simply dummy text of the printing and typesetting industry.</p>
                                                                    <div class="facilities-list fl-wrap">
                                                                        <div class="facilities-list-title p-price">
                                                                            <t t-if="ll.sale_lease == 'for_sale'">
                                                                                <t t-esc="ll.sale_price" t-options='{"widget": "monetary", "display_currency": ll.currency_id}' />
                                                                            </t>
                                                                            <t t-else="">
                                                                                <t t-esc="ll.tenancy_price" t-options='{"widget": "monetary", "display_currency": ll.currency_id}' /> <t t-if="ll.rent_unit">/<t t-esc="ll.rent_unit" /></t>
                                                                            </t>
                                                                        </div>
                                                                    </div>
                                                                    <div class="facilities-list fl-wrap">
                                                                        <div class="facilities-list-title">Facilities : </div>
                                                                        <ul class="no-list-style">
                                                                            <li class="tolt" data-microtip-position="top" data-tooltip="Internet Available" t-if="ll.web_wifi"><i class="fal fa-wifi"></i></li>
                                                                            <li class="tolt" data-microtip-position="top" data-tooltip="Parking Available" t-if="ll.web_parking"><i class="fal fa-parking"></i></li>
                                                                            <li class="tolt" data-microtip-position="top" data-tooltip="Air Conditioned" t-if="ll.web_air_condition"><i class="fal fa-cloud"></i></li>
                                                                            <li class="tolt" data-microtip-position="top" data-tooltip="Semi Furnished" t-if="ll.web_semi_furnish"><i class="fal fa-couch"></i></li>
                                                                            <li class="tolt" data-microtip-position="top" data-tooltip="Full Furnished" t-if="ll.web_full_furnish"><i class="fal fa-loveseat"></i></li>
                                                                            <li class="tolt" data-microtip-position="top" data-tooltip="Security" t-if="ll.web_security"><i class="fal fa-cctv"></i></li>
                                                                            <li class="tolt" data-microtip-position="top" data-tooltip="Laundry Room" t-if="ll.web_laundry"><i class="fal fa-washer"></i></li>
                                                                            <li class="tolt" data-microtip-position="top" data-tooltip="Not Available" t-if="not ll.web_equip_kitchen and not ll.web_wifi and not ll.web_parking and not ll.web_air_condition and not ll.web_semi_furnish and not ll.web_full_furnish and not ll.web_security and not ll.web_laundry">
                                                                                <i class="fal fa-ban"></i>
                                                                            </li>
                                                                        </ul>
                                                                    </div>
                                                                </div>
                                                                <div class="geodir-category-footer fl-wrap">
                                                                    <t t-if="ll.type == 'residential'">
                                                                        <t t-if="ll.residence_type == 'apartment'">
                                                                            <a class="listing-item-category-wrap">
                                                                                <div class="listing-item-category purp-bg"><i class="fal fa-building"></i></div>
                                                                                <span>Apartment</span>
                                                                            </a>
                                                                        </t>
                                                                        <t t-if="ll.residence_type == 'bungalow'">
                                                                            <a class="listing-item-category-wrap">
                                                                                <div class="listing-item-category yg-bg"><i class="fal fa-home"></i></div>
                                                                                <span>Bungalow</span>
                                                                            </a>
                                                                        </t>
                                                                        <t t-if="ll.residence_type == 'vila'">
                                                                            <a class="listing-item-category-wrap">
                                                                                <div class="listing-item-category blue-bg"><i class="fal fa-home"></i></div>
                                                                                <span>Villa</span>
                                                                            </a>
                                                                        </t>
                                                                        <t t-if="ll.residence_type == 'raw_house'">
                                                                            <a class="listing-item-category-wrap">
                                                                                <div class="listing-item-category blue-bg"><i class="fal fa-home"></i></div>
                                                                                <span>Raw House</span>
                                                                            </a>
                                                                        </t>
                                                                        <t t-if="ll.residence_type == 'duplex'">
                                                                            <a class="listing-item-category-wrap">
                                                                                <div class="listing-item-category red-bg"><i class="fal fa-home"></i></div>
                                                                                <span>Duplex</span>
                                                                            </a>
                                                                        </t>
                                                                        <t t-if="ll.residence_type == 'single_studio'">
                                                                            <a class="listing-item-category-wrap">
                                                                                <div class="listing-item-category red-bg"><i class="fal fa-home"></i></div>
                                                                                <span>Single Studio</span>
                                                                            </a>
                                                                        </t>
                                                                    </t>
                                                                    <t t-if="ll.type == 'land'">
                                                                        <a class="listing-item-category-wrap">
                                                                            <div class="listing-item-category green-bg"><i class="fal fa-map"></i></div>
                                                                            <span>Land</span>
                                                                        </a>
                                                                    </t>
                                                                    <t t-if="ll.type == 'commercial'">
                                                                        <a class="listing-item-category-wrap">
                                                                            <div class="listing-item-category coral-bg"><i class="fal fa-dumpster"></i></div>
                                                                            <span>Commercial</span>
                                                                        </a>
                                                                    </t>
                                                                    <t t-if="ll.type == 'industrial'">
                                                                        <a class="listing-item-category-wrap">
                                                                            <div class="listing-item-category yellow-bg"><i class="fal fa-industry"></i></div>
                                                                            <span>Industrial</span>
                                                                        </a>
                                                                    </t>
                                                                    <div class="geodir-opt-list">
                                                                        <ul class="no-list-style">
                                                                            <li><a t-attf-href="https://www.google.com/maps?q=loc:#{ll.latitude},#{ll.longitude}" class="single-map-item" target="_blank" t-if="ll.latitude and ll.longitude" t-att-data-newlatitude="ll.latitude" t-att-data-newlongitude="ll.longitude"><i class="fal fa-map-marker-alt"></i><span class="geodir-opt-tooltip">On the map <strong>1</strong></span> </a></li>
                                                                            <li t-if="ll.property_images_ids">
                                                                                <t t-set="d_gal" t-value="[]" />
                                                                                <t t-foreach="ll.property_images_ids" t-as="img">
                                                                                    <t t-set="d_gal" t-value="d_gal + [{'src': image_data_uri(img.image)}]" />
                                                                                </t>
                                                                                <div class="dynamic-gal gdop-list-link" t-att-data-dynamicPath="str(d_gal)"><i class="fal fa-search-plus"></i><span class="geodir-opt-tooltip">Gallery</span></div>
                                                                            </li>
                                                                        </ul>
                                                                    </div>
                                                                    <div class="geodir-category_contacts">
                                                                        <div class="close_gcc"><i class="fal fa-times-circle"></i></div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </article>
                                                    </div>
                                                </t>
                                                <t t-call="tk_website_rental_management.pager" />
                                            </div>
                                            <div class="listing-item-container init-grid-items fl-wrap nocolumn-lic" t-else="">
                                                <div class="section-title">
                                                    <h2>No Property list found.</h2>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                        <div class="limit-box fl-wrap"></div>
                        <section class="oe_structure oe_empty"></section>
                    </div>
                </div>
            </t>
        </template>
        <template id="pager" name="Pager">
            <div t-if="pager['page_count'] > 1" t-attf-class="pagination fwmpag">
                <a t-att-href="pager['page_previous']['url'] if pager['page']['num'] != 1 else None" t-attf-class="prevposts-link #{'disabled' if pager['page']['num'] == 1 else ''}"><i class="fas fa-caret-left"></i><span>Prev</span></a>
                <t t-foreach="pager['pages']" t-as="page">
                    <a t-att-href="page['url']" t-attf-class="#{'current-page' if page['num'] == pager['page']['num'] else ''}" t-out="page['num']"/>
                </t>
                <a t-att-href="pager['page_next']['url'] if pager['page']['num'] != pager['page_count'] else None" t-attf-class="nextposts-link #{'disabled' if pager['page']['num'] == pager['page_count'] else ''}"><span>Next</span><i class="fas fa-caret-right"></i></a>
            </div>
        </template>
        <template id="amenities_filters" name="Amenities">
            <div class="listsearch-input-item clact">
                <div class=" fl-wrap filter-tags">
                    <ul class="no-list-style">
                        <li class="gym" t-if="request.params.get('gym') and request.params.get('gym') == '1'">
                            <input id="check-gym" type="checkbox" name="gym" value="1" checked="checked" />
                            <label for="check-gym">Fitness Gym</label>
                        </li>
                        <li class="gym" t-else="">
                            <input id="check-gym" type="checkbox" value="1" />
                            <label for="check-gym">Fitness Gym</label>
                        </li>

                        <li class="wifi" t-if="request.params.get('wifi') and request.params.get('wifi') == '1'">
                            <input id="check-wifi" type="checkbox" name="wifi" value="1" checked="checked" />
                            <label for="check-wifi">WiFi</label>
                        </li>
                        <li class="wifi" t-else="">
                            <input id="check-wifi" type="checkbox" value="1" />
                            <label for="check-wifi">WiFi</label>
                        </li>

                        <li class="parking" t-if="request.params.get('parking') and request.params.get('parking') == '1'">
                            <input id="check-parking" type="checkbox" value="1" name="parking" checked="checked" />
                            <label for="check-parking">Parking</label>
                        </li>
                        <li class="parking" t-else="">
                            <input id="check-parking" type="checkbox" value="1" />
                            <label for="check-parking">Parking</label>
                        </li>

